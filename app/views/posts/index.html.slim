- if user_signed_in?
  #admin_menu.mb-4
    = render "tab"
    .tab-content.p-5.border.border-top-0 style= "min-height:300px; background-color: #fffcf9;"
      #post.tab-pane.fade.show.active
        = render "form", post: @post
      #place.tab-pane.fade
        = render "places/index", places: @places, place: @place
      #notification.tab-pane.fade
        = render "notifications/index", notification: @notification

#visitor_menu
  h2
    | 投稿一覧
  hr
  = render(partial: 'post', collection: @posts, as: :post )

- if @pagy.pages > 1
  .d-flex.justify-content-center
    == pagy_bootstrap_nav(@pagy)
